{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
{% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<div class="container mt-5">
    <div class="col-md-8 mx-auto register-form">
        <h1 class="h3 mb-3 font-weight-normal">Cr√©er un compte</h1>

        {{ form_start(registrationForm) }}
        <div class="my-3">
            <div class="">{{ form_label(registrationForm.email) }}</div>
            <div class="">{{ form_widget(registrationForm.email) }}</div>
        </div>
        <div class="my-3">
            <div class="">{{ form_label(registrationForm.plainPassword) }}</div>
            <div class="">{{ form_widget(registrationForm.plainPassword) }}</div>
        </div>
        <div class="mb-3 mt-5 row px-3">
            <div class="mr-4">{{ form_widget(registrationForm.agreeTerms) }}</div>
            <div class="">{{ form_label(registrationForm.agreeTerms) }}</div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary my-3">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}